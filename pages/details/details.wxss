.detail {
  width: 100%;
  height: 100%;
  background-image: linear-gradient(180deg, #a5caf1 0%,  #ffedf5 100%);
}
.title {
  font-weight: bolder;
  font-size: 20px;
  text-align: center;
}
.source {
  font-weight: bolder;
  float: right;
}
image {
  width: 100%;
  height: calc(100vw * 280 / 520);
  text-align: center;
  border-radius: 10px;
}
.content {
  padding: 14px;
}