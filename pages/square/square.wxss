/* pages/square/square.wxss */
/* 下方是square的样式代码 */
.big {
  width: 100%;
  height: 100%;
  background-image: linear-gradient(180deg, #a5caf1 0%,  #ffedf5 100%);
}
.scv{
  /* background-color: white; */
  background-image: linear-gradient(180deg, #a5caf1 0%,  #ffedf5 100%);
  height: 91.6%;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  right: 0rpx;
} 

.box{
  border-bottom: 20rpx solid #a5caf1;
  border: #aec8e4 2px solid;
  padding: 16rpx 20rpx;
  border-radius: 16rpx;
  margin: 16rpx 20rpx;
  box-shadow: 5rpx 10rpx 30rpx -8rpx #ffedf5;
} 

/* ----------第一个盒子整体样式----------*/
.firstBlock{
  height: 150rpx;
  width: 92%;
  margin-left: 3%;
  margin-right: 4%;
}

/* 用户头像样式 */
.userIcon{
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
}

/* 用户信息(名字+发布时间)样式 */
.userInfo{
  width: 75%;
  height: 130rpx;
  margin-left: 180rpx;
  margin-top: -130rpx;
}

/* 用户名字样式 */
.userName{
  margin-top:10rpx;
}

.userName text{
  font-size: 30rpx;
}

/* 用户发布时间样式 */
.userTime{
  margin-top:10rpx;
}

.userTime text{
  font-size: 24rpx;
}

/* ----------第二个盒子样式------------- */
.secendBlock{
  /* margin-left: 0%; */
  margin-right: 4%;
  margin-top: 10rpx;
  padding-bottom: 20rpx;
  /* border-bottom: 1rpx solid gray; */
}

.content text{
  font-size: 30rpx;
  color: #101010;
  margin-left: 14rpx;
  word-break: break-all;
}
/* 用户发布的图片的大小 */
.userImage{
  width: 180rpx;
  height: 180rpx;
  margin-top:20rpx;
  margin-left:20rpx;
}

/* -------第三个盒子样式----------- */
.thirdBlock{
  height: 80rpx;
  margin-left: 3%;
  margin-right: 3%;
  display: flex;
  justify-content: flex-start;
  margin-bottom: 10rpx;
  background-color: #a5caf1;
  border-radius: 10px;
}

.center {
  margin-left: 14px;
}
/* 点赞图片样式 */
.likeIcon{
  margin-top: 13rpx;
  margin-left: 10rpx;
  width: 30px;
  height: 25px;
  /* background-color: #f5f5f5; */
}

/* 点赞数量样式 */
.likeNum{
  font-size: 30rpx;
  margin-top: 20rpx;
  margin-left: 15rpx;
  color: #101010;
}

/* 评论框样式 */
.inp{
  width: 400rpx;
  background-color: #f5f5f5;
  height: 70rpx;
  margin-left: 30rpx;
  margin-top:5rpx;
  border-radius: 6px;
}

/* 发表按钮样式 */
.btn{
  margin-top: 5rpx;
  background-color: #00BFFF;
  width: 180rpx;
  height: 70rpx;
  margin-left: 4rpx;
}
.btn text {
  display: block;
  margin-top: -6rpx;
  font-size: 33rpx;
}

/* 第四个盒子样式 */
.fourthBlock{
  width: 100%;
  height: 80rpx;
  margin-left: 5rpx;
}

/* 评论中的用户名的样式 */
.talkUser{
  margin-top:10rpx;
  margin-left: 20rpx;
  float:left;
  font-size: 35rpx;
}

/* 评论中的评论内容的样式 */
.talkContent{
  float:left;
  margin-top: 12rpx;
  margin-left: 20rpx;
}


/* 引入底部菜单的样式 */
@import "/pages/bottom_menu/bottom_menu";
