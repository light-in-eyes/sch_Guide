/* 设置顶部背景颜色 */
.big {
  width: 100%;
  height: 100%;
  background-image: linear-gradient(180deg, #a5caf1 0%,  #ffedf5 100%);
}
swiper image {
  width: 98%;
  margin-left: 8rpx;
  border-radius: 6px;
}
swiper{
  width: 100%;
  height: calc(100vw * 280 / 520);
  border-radius: 6px;
}

/* 设置分类导航的样式 */
.navBox {
  display: flex;
  flex-wrap: wrap;
  font-size: 14px;
  justify-content: center;
}
.navBox view {
  margin: 0 14px;
  margin-top: 18px;
  text-align: center;
}
.navBox image{
  display: block;
  width: 40px;
  height: 40px;
  margin: 0 auto;
  border-radius: 50%;
  margin-bottom: 6px;
}
.navBox text {
  font-size: 13px;
}

