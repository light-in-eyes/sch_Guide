/* ------------- */
.card_container {
  padding: 6rpx 20rpx;
  border-radius: 16rpx;
  box-shadow: 5rpx 10rpx 30rpx -8rpx #ccccce;
  margin: 16rpx 20rpx;
}
.card_container :active {
  background-color: #ececec;
}
.title {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-weight: bold;
  font-size: 31rpx;
  margin-bottom: 16rpx;
}
.desc {
  display: flex;
  height: 120rpx;
  overflow: hidden;
  justify-content: space-between;
}
.right_icon image {
  width: 100rpx;
  height: 100rpx;
  vertical-align: middle;
}
.left {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  padding-right: 20rpx;
  word-wrap: break-word;
  font-size: 30rpx;
}

.bottom {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
}
.like {
  display: flex;
  margin-top: -8rpx;
}
.like text{
  font-size: 24rpx;
  text-align: center;
  margin-left: 12rpx;
  margin-top: 8rpx;
}
.publish_time{
  font-size: 24rpx;
}
.like image {
  width: 40rpx;
  height: 40rpx;
  z-index: 999;
  margin-top: 4rpx;
}
