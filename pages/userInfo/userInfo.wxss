/* pages/userInfo/userInfo.wxss */
.big{
  width: 100%;
  height: 100%;
  background-image: linear-gradient(180deg, #a5caf1 0%,  #ffedf5 100%);
}

/* 用户的 大头像 和 用户名 的样式 */
.userInfo{
  width: 92%;
  margin-left: 4%;
  margin-right: 4%;
  background-color: #a5caf1;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.userIcon{
  border-radius: 50%;
  height: 200rpx;
  width: 200rpx;
  /* background-color: #a5caf1; */
  border: #a5caf1 solid 5rpx;
  display: flex;
  justify-content: center;
  margin-top: 60rpx;
}

.userBigIcon{
  height: 180rpx;
  width: 180rpx;
}

.userName{
  margin-top: 30rpx;
  margin-bottom:60rpx;
}

/* 用户发布的 内容 的样式 */
.userContent{
  margin-top: 30rpx;
  width: 92%;
  margin-left: 4%;
  margin-right: 4%;
  /* border-bottom: 20rpx solid #a5caf1; */
  margin-bottom: 150rpx;
}

.contentBlock{
  /* border-bottom: 20rpx solid #a5caf1; */
  border: #aec8e4 2px solid;
  padding: 16rpx 20rpx;
  border-radius: 16rpx;
  margin: 16rpx 20rpx;
}

.content{
  margin-top: 10rpx;
  padding-bottom: 15rpx;
  word-break: break-all;
}

.content text{
  color: #000000;
  font-size: 36rpx;
}

/* 发布的图片的样式 */
.userImage{
  width: 130rpx;
  height: 130rpx;
  margin-top:20rpx;
  margin-left:10rpx;
}

.sendTime{
  margin-bottom: 20rpx;
}

.sendTime text{
  color: gray;
  font-size: 25rpx;
}

.likeBlock{
  width: 96%;
  margin-right: 2%;
  margin-left: 2%;
}

/* 点赞图片样式 */
.likeIcon{
  margin-top: 10rpx;
  margin-left: 10rpx;
  width: 50rpx;
  height: 50rpx;
}

/* 点赞数量样式 */
.likeNum{
  display: block;
  font-size: 30rpx;
  margin-top: -50rpx;
  margin-left: 75rpx;
  color: #101010;
}

/* 删除按钮样式 */
.delBtn{
  background-color: #00BFFF;
  width: 380rpx;
  height: 90rpx;
  border-radius: 32rpx;
  margin-top: 10rpx;
  margin-bottom: 8rpx;
}

/* 评论盒子的样式 */
.talkBlock{
  width: 100%;
  height: 80rpx;
  margin-left: 30rpx;
}

/* 评论中的用户名的样式 */
.talkUser{
  margin-top:10rpx;
  float:left;
  font-size: 35rpx;
}

/* 评论中的评论内容的样式 */
.talkContent{
  float:left;
  margin-top: 12rpx;
  margin-left: 20rpx;
}

/* 引入底部菜单的样式 */
@import "/pages/bottom_menu/bottom_menu";