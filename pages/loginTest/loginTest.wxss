/* miniprogram/pages/authPage/authPage.wxss */
page {
  width: 100%;
  height: 100%;
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.loginButton {
  width:400rpx;
  height:88rpx;
  background:#3B49E0;
  box-shadow:0rpx 0rpx 30rpx 0rpx #3B4990;
  border-radius:44rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 25%;
}

.sec_container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.hintImage {
  width: 150rpx;
  height: 150rpx;
  margin-top: 50%;
  margin-bottom: 40rpx;
  border-radius: 50%;
}

.hintText {
  font-size:40rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:28rpx;
  text-align: center;
}